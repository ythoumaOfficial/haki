<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Canceled</title>

    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100%;
            height: 100%;
        }

        .lading-wrapper {
            width: 100%;
            height: 100%;
        }

        .question {
            display: none;
        }

        .question-text {
            padding: 20px;
            margin: 0px;
            border-bottom: 1px solid #000;
        }

        .question-option {
            padding: 30px;
            margin: 0px;
            border-bottom: 1px solid #000;
            background: #fff;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="lading-wrapper">
            <h2 style="text-align: center;">
                <% for(var i=0; i<data.length; i++) {%>
                    <div class="question">
                        <div class="question-text">
                            <%= data[i].question %>
                        </div>
                        <% for(var j=0; j<data[i].options.length; j++) {%>
                            <div class="question-option" onclick="plusDivs(1)">
                                <%= data[i].options[j].option %>
                            </div>


                            <% } %>
                    </div>
                    <% } %>
                        <div style="font-weight: 100;font-size: 20px;">
                        </div>
            </h2>
        </div>
    </div>
    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("question");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
            shuffleColors();
        }
        function shuffleColors() {
            var i;
            var x = document.getElementsByClassName("question-option");
            for (i = 0; i < x.length; i++) {
                x[i].style.backgroundColor = getRandomColor();
            }
        }
        function getRandomColor() {
                var letters = 'BCDEF'.split('');
                var color = '#';
                for (var i = 0; i < 6; i++ ) {
                    color += letters[Math.floor(Math.random() * letters.length)];
                }
                console.log(color);
                return color;
            }
    </script>
</body>

</html>